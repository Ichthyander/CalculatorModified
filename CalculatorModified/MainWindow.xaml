<Window x:Class="CalculatorModified.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorModified"
        mc:Ignorable="d"
        Title="MainWindow" Height="Auto" Width="Auto" MinWidth="240" MinHeight="360" SizeToContent="WidthAndHeight" Background="Gray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition x:Name="uniformGrid" Height="6*"/>
        </Grid.RowDefinitions>
        <Border 
            CornerRadius="5"
            Margin="3 0 3 3" 
            Padding="5"
            BorderThickness="3,3,1,1"
            Background="#FFD4EAFD"
            BorderBrush="Aquamarine"
            >
            <TextBlock
                x:Name = "calculatorDisplay"
                HorizontalAlignment = "Right"
                VerticalAlignment = "Bottom" 
                FontFamily="Arial Narrow" 
                FontSize="32"
                FontWeight="Bold"
                Padding="5" 
                >
            </TextBlock>
        </Border>
        <UniformGrid Grid.Row="1" Rows="6" Columns="4" Margin="3 3 1 1">
            <UniformGrid.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.AppWorkspaceColorKey}}"/>
            </UniformGrid.Background>

            <Button Content="%" Margin="2" Padding="5" FontFamily="Arial" FontSize="16">
                <Button.Background>
                    <SolidColorBrush Color="#FFD4D4D4"/>
                </Button.Background>
            </Button>
            <Button Content="CE" Margin="2" Padding="5" FontFamily="Arial" FontSize="16">
                <Button.Background>
                    <SolidColorBrush Color="#FFD4D4D4"/>
                </Button.Background>
            </Button>
            <Button Content="C" Margin="2" Padding="5" FontFamily="Arial" FontSize="16">
                <Button.Background>
                    <SolidColorBrush Color="#FFD4D4D4"/>
                </Button.Background>
            </Button>
            <Button Content="←" Margin="2" Padding="5" FontFamily="Arial" FontSize="16">
                <Button.Background>
                    <SolidColorBrush Color="#FFD4D4D4"/>
                </Button.Background>
            </Button>
            <Button Content="1/x" Margin="2" Padding="5" FontFamily="Arial" FontSize="16">
                <Button.Background>
                    <SolidColorBrush Color="#FFD4D4D4"/>
                </Button.Background>
            </Button>
            <Button Content="x²" Margin="2" Padding="5" FontFamily="Arial" FontSize="16">
                <Button.Background>
                    <SolidColorBrush Color="#FFD4D4D4"/>
                </Button.Background>
            </Button>
            <Button Content="√x" Margin="2" Padding="5" FontFamily="Arial" FontSize="16">
                <Button.Background>
                    <SolidColorBrush Color="#FFD4D4D4"/>
                </Button.Background>
            </Button>
            <Button Content="÷" Margin="2" Padding="5" FontFamily="Arial" FontSize="16">
                <Button.Background>
                    <SolidColorBrush Color="#FFD4D4D4"/>
                </Button.Background>
            </Button>
            <Button Content="7" Margin="2" Padding="5" FontFamily="Arial" FontSize="16">
                <Button.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightLightColorKey}}"/>
                </Button.Background>
            </Button>
            <Button Content="8" Margin="2" Padding="5" FontFamily="Arial" FontSize="16">
                <Button.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightLightColorKey}}"/>
                </Button.Background>
            </Button>
            <Button Content="9" Margin="2" Padding="5" FontFamily="Arial" FontSize="16">
                <Button.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightLightColorKey}}"/>
                </Button.Background>
            </Button>
            <Button Content="×" Margin="2" Padding="5" FontFamily="Arial" FontSize="16">
                <Button.Background>
                    <SolidColorBrush Color="#FFD4D4D4"/>
                </Button.Background>
            </Button>
            <Button Content="4" Margin="2" Padding="5" FontFamily="Arial" FontSize="16">
                <Button.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightLightColorKey}}"/>
                </Button.Background>
            </Button>
            <Button Content="5" Margin="2" Padding="5" FontFamily="Arial" FontSize="16">
                <Button.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightLightColorKey}}"/>
                </Button.Background>
            </Button>
            <Button Content="6" Margin="2" Padding="5" FontFamily="Arial" FontSize="16">
                <Button.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightLightColorKey}}"/>
                </Button.Background>
            </Button>
            <Button Content="-" Margin="2" Padding="5" FontFamily="Arial" FontSize="16">
                <Button.Background>
                    <SolidColorBrush Color="#FFD4D4D4"/>
                </Button.Background>
            </Button>
            <Button Content="1" Margin="2" Padding="5" FontFamily="Arial" FontSize="16">
                <Button.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightLightColorKey}}"/>
                </Button.Background>
            </Button>
            <Button Content="2" Margin="2" Padding="5" FontFamily="Arial" FontSize="16">
                <Button.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightLightColorKey}}"/>
                </Button.Background>
            </Button>
            <Button Content="3" Margin="2" Padding="5" FontFamily="Arial" FontSize="16">
                <Button.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightLightColorKey}}"/>
                </Button.Background>
            </Button>
            <Button Content="+" Margin="2" Padding="5" FontFamily="Arial" FontSize="16">
                <Button.Background>
                    <SolidColorBrush Color="#FFD4D4D4"/>
                </Button.Background>
            </Button>
            <Button Content="+/-" Margin="2" Padding="5" FontFamily="Arial" FontSize="16">
                <Button.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightLightColorKey}}"/>
                </Button.Background>
            </Button>
            <Button Content="0" Margin="2" Padding="5" FontFamily="Arial" FontSize="16">
                <Button.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightLightColorKey}}"/>
                </Button.Background>
            </Button>
            <Button Content="," Margin="2" Padding="5" FontFamily="Arial" FontSize="16">
                <Button.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightLightColorKey}}"/>
                </Button.Background>
            </Button>
            <Button Content="=" Margin="2" Padding="5" FontFamily="Arial" FontSize="16">
                <Button.Background>
                    <SolidColorBrush Color="#FFD4D4D4"/>
                </Button.Background>
            </Button>

        </UniformGrid>
    </Grid>
</Window>
